.DarkMode
  #l_body
    background-color: #353637
  .l_main
    #post-calendar
      background-color: #ebedf0
      border-radius: 8px
    .link-card
      a
        background-color: #f1f1f1
      .text
        color: #44444475
      &:hover
        box-shadow: 5px 3px 3px #b1b1b1
    .card-content
      span
        color: #a8a8a8
    .references
      background: #44444475 !important
    .post-list
      .md
        color: #a9aaab
    #comments
      .vcards
        .vhead
          .vsys
            background:none
        .vcontent
          p
            color: rgb(136 136 136)
      .vinput
        color: #dbdbe2
      #valine_container
        .vwrap
          border: 1px dashed #fff
          .vemojis
            background:none
